<script>
  function checkPassword() {
    var pass = document.getElementById("password").value;
    if (pass === "mahzenarow") {
      document.getElementById("login-screen").style.display = "none";
      document.getElementById("main-content").style.display = "block";
      document.getElementById("girisMuzik").play();
    } else {
      let err = document.getElementById("error-msg");
      err.style.display = "block";
      err.style.animation = "shake 0.3s";
      setTimeout(() => err.style.animation = "", 300);
    }
  }

  function startChecker() {
    const lines = document.getElementById("cardList").value.trim().split("\n");
    let live = 0, dead = 0;
    document.getElementById("resultArea").innerHTML = "";
    lines.forEach((line, index) => {
      setTimeout(() => {
        if (line.endsWith("2") || line.endsWith("4")) {
          live++;
          document.getElementById("resultArea").innerHTML += `<div class="text-success">${line} - LIVE</div>`;
        } else {
          dead++;
          document.getElementById("resultArea").innerHTML += `<div class="text-danger">${line} - DEAD</div>`;
        }
        document.getElementById("liveCount").innerText = live;
        document.getElementById("deadCount").innerText = dead;
      }, 300 * index);
    });
  }

  function clearResults() {
    document.getElementById("cardList").value = "";
    document.getElementById("resultArea").innerHTML = "";
    document.getElementById("liveCount").innerText = "0";
    document.getElementById("deadCount").innerText = "0";
  }
</script>

